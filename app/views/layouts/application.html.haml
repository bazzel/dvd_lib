!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    -# See http://henrik.nyh.se/2008/05/rails-authenticity-token-with-jquery
    - if protect_against_forgery?
      :javascript
        var AUTH_TOKEN = #{form_authenticity_token.inspect};

    
    = google_jquery
    = google_jqueryui
    = javascript_include_tag 'application'

    / Blueprint CSS
    =# stylesheet_link_tag 'blueprint/screen', :media => "screen, projection"
    =# stylesheet_link_tag 'blueprint/print', :media => "print"
    /[if IE]
      =# stylesheet_link_tag 'blueprint/ie', :media => "screen, projection"
    = stylesheet_link_tag 'blueprint/plugins/fancy-type/screen', 'blueprint/plugins/buttons/screen', :media => "screen, projection"
    / End Blueprint CSS

    = silksprite_stylesheets
    = stylesheet_link_tag "formtastic", "formtastic_changes"
    = stylesheet_link_tag 'application'
    = yield(:head)
  
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield

%li.item[disc]
  %h5= h disc.number
  %div{:class => disc.seen? ? 'seen' : ''}= link_to disc.title, disc
  = image_tag disc.photo.url(:small) if disc.photo
  = link_to 'Edit', edit_disc_path(disc), :class => 'disc-edit edit'
  = link_to "Destroy", disc, :confirm => 'Are you sure?', :method => :delete, :class => 'disc-remove remove'